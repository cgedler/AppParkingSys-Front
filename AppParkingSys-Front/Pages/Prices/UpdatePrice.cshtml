@page "{id:int}"
@model Prices.UpdatePriceModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update price";
}
<form method="post">
    <!-- Amount input -->
    <div class="form-group">
        <input asp-for="@Model.price.Amount" type="number" class="form-control" />
        <label asp-for="price.Amount" class="form-label">Amount</label>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Save Changes</button>
</form>
